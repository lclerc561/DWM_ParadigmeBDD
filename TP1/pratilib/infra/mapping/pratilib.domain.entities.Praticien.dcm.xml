<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                        https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="pratilib\domain\entities\Praticien" table="praticien" repository-class="pratilib\infra\repositories\PraticienRepository">
        
        <id name="id" column="id" type="string">
            <generator strategy="NONE"/>
        </id>
        
        <field name="nom" column="nom" type="string" />
        <field name="rpps_id" column="rpps_id" type="string" />
        <field name="prenom" column="prenom" type="string" />
        <field name="titre" column="titre" type="string" />
        <field name="ville" column="ville" type="string" />
        <field name="email" column="email" type="string" />
        <field name="telephone" column="telephone" type="string" />
        <field name="organisation" column="organisation" type="string" length="1" />
        <field name="accepte_nouveau_patient" column="nouveau_patient" type="string" length="1" />
        
        <many-to-one field="specialite" target-entity="pratilib\domain\entities\Specialite">
            <join-column name="specialite_id" referenced-column-name="id" />
        </many-to-one>
        
        <many-to-one field="structure" target-entity="pratilib\domain\entities\Structure">
            <join-column name="structure_id" referenced-column-name="id" />
        </many-to-one>

        <many-to-many field="motifs" target-entity="pratilib\domain\entities\MotifVisite">
            <join-table name="praticien2motif">
                <join-columns>
                    <join-column name="praticien_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="motif_id" referenced-column-name="id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-many field="moyensPaiement" target-entity="pratilib\domain\entities\MoyenPaiement">
            <join-table name="praticien2moyen">
                <join-columns>
                    <join-column name="praticien_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="moyen_id" referenced-column-name="id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    
    </entity>
</doctrine-mapping>