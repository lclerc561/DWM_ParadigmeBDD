meta {
  name: 8. Utilisation de Fragments
  type: graphql
  seq: 8
}

get {
  url: http://localhost:8055/graphql
  body: graphql
  auth: inherit
}

body:graphql {
  query {
    parisiens: Praticien(filter: { ville: { _eq: "Paris" } }) {
      ...infosBase
    }
    bourdons: Praticien(filter: { ville: { _eq: "Bourdon-les-Bains" } }) {
      ...infosBase
    }
  }
  
  fragment infosBase on Praticien {
    nom
    prenom
    email
    ville
  }
}

settings {
  encodeUrl: true
  timeout: 0
}
